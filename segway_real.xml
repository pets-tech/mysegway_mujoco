<mujoco>
    <asset>
        <texture name="tex-checker" type="2d" builtin="checker" rgb1=".7 .7 .7" rgb2=".8 .8 .8" width="100" height="100"/>
        <material name="color-yellow" rgba="0.8 0.8 0.0 .5"/>
        <material name="color-red" rgba="0.5 0.0 0.0 .5"/>
        <material name="mat-plane" texture="tex-checker" texrepeat="10 10" texuniform="true"/>
    </asset>
    <worldbody>
        <camera name="side_cam" pos="10 0 0.1" euler="90 90 0"/>
        <light diffuse=".5 .5 .5" pos="0 0 3" dir="0 0 -1"/>
        <geom type="plane" size="50 50 0.1" material="mat-plane"/>
        <body name="chassis" pos="0 0 0.525" quat="1 0.15 0 0">
            <joint type="free"/>
            <geom name="chassis-geom" type="box" size=".2 .05 .35" material="color-yellow" mass="18.4"/>
            <body name="left-wheel" pos="-0.25 0.002 -0.35">
                <joint name="left-wheel-joint" type="hinge" axis="1 0 0" damping="0.0002" frictionloss="0.00005"/>
                <geom name="left-wheel-geom" type="cylinder" size="0.17 0.0488" material="color-red" mass="1.8" euler="0 90 0"/>
            </body>
            <body name="right-wheel" pos="0.25 0.002 -0.35">
                <joint name="right-wheel-joint" type="hinge" axis="1 0 0" damping="0.0002" frictionloss="0.00005"/>
                <geom name="right-wheel-geom" type="cylinder" size="0.17 0.0488" material="color-red" mass="1.8" euler="0 90 0"/>
            </body>
            <site name="imu" pos="0 0 0" size="0.005" rgba="1 0 0 0.5"/> 
        </body>
    </worldbody>
    <sensor>
        <gyro name="imu_gyro" site="imu"/>
    </sensor>
    <actuator>
        <motor name="left-motor" joint="left-wheel-joint" gear="1.0" ctrllimited="true" ctrlrange="-8.0 8.0"/>
        <motor name="right-motor" joint="right-wheel-joint" gear="1.0" ctrllimited="true" ctrlrange="-8.0 8.0"
        />
    </actuator>
</mujoco>

